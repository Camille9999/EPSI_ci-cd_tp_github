{
  "name": "ci-cd",
  "private": true,
  "version": "0.0.12",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "lint": "eslint src --max-warnings=0",
    "prepare": "husky",
    "test": "vitest run",
    "test:unit": "vitest run --config vitest.config.js --coverage",
    "test:e2e:auth": "playwright test --config=playwright-auth.config.ts",
    "test:e2e:ecommerce": "playwright test --config=playwright-ecommerce.config.ts",
    "test:all": "npm run test:unit && npm run test:e2e:auth && npm run test:e2e:ecommerce",
    "release": "release-it"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@httpx/exception": "^3.0.5",
    "@playwright/test": "^1.55.1",
    "@types/node": "^24.5.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "release-it": "^19.2.3",
    "vite": "^5.0.8",
    "vitest": "^3.2.4",
    "zod": "^3.22.4"
  },
  "dependencies": {
    "express": "^4.18.2",
    "postgres": "^3.4.4"
  },
  "release-it": {
    "$schema": "https://unpkg.com/release-it/schema/release-it.json",
    "github": {
      "release": true
    }
  }
}
